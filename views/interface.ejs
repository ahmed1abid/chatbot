<!DOCTYPE html>
<html>
<head>
  <title>Chatbot</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    /* Add your custom styles here */
    .chat-log {
      overflow-y: scroll;
      height: 300px;
    }
    .user-msg {
      background-color: #f2f2f2;
      padding: 10px;
      margin-bottom: 10px;
    }
    .bot-msg {
      background-color: #e2e2e2;
      padding: 10px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Chatbot: <%= myChatbot.name %></h1>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center mb-4"><%= myChatbot.personality %></h1>
        <div id="chat-window" class="card mb-4">
          <div class="card-body">
            <div class="chat-log">
              <% const chatlog = myChatbot.getChatLog(); %>
              <% for (let i = 0; i < chatlog.length; i++) { %>
                <% const messageClass = chatlog[i].isUser ? 'user-msg' : 'bot-msg'; %>
                <div class="<%= messageClass %>"><%= chatlog[i].message %></div>
              <% } %>
            </div>
          </div>
        </div>
        <form id="chat-form" class="mt-3" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" id="chat-input" name="message" placeholder="Type your message...">
          </div>
          <button type="submit" class="btn btn-primary">Send</button>
        </form>
        <form action="/logout" method="GET" class="mt-4">
          <button type="submit" class="btn btn-secondary">Logout</button>
        </form>
        <form action="/botMenu" method="GET" class="mt-4">
          <button type="submit" class="btn btn-primary">Menu</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="../conversation.js"></script>
</body>
</html>
